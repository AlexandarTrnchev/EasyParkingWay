@model  Application.Cities.Models.CityDto

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
    @if (Model.Parkings != null && Model.Parkings.Count > 0)
    {
        <h3>Please choose parking </h3>
    }
    else
    {
        <h3 class="alert-danger">Not have available parking places in this city</h3>
    }
    <br />
</div>

<div class="row">
    @if (Model.Parkings != null )
    {
        @foreach (var item in Model.Parkings)
        {
            <div class="col-6" style="width: 18rem; margin-bottom: 25px;">
                <div class="card">
                    @*<img class="card-img-top" src="..." alt="Card image cap">*@
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Address: @item.Address</p>
                        <a href="/Home/GetAllParkingPlacesByParkingId?parkingId=@item.Id" class="btn btn-primary">Find your parking place</a>
                    </div>
                </div>
            </div>
        }
    }

</div>