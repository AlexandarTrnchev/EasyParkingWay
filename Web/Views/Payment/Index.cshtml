@model Application.Payments.Models.PaymentModel;



<div class="row">
    @*<input type="hidden" class="form-control" name="parkingId" value="@Model.Parking?.Id">*@
    <div class="col-8">
        <img src="~/images/borika.jpg" asp-append-version="true">
    </div>
    <div class="col-3">
        <form asp-controller="Payment" asp-action="Payment" method="post">
            <div style="margin-top:20px">
                <input type="hidden" value="@Model.City" name="City">
                <input type="hidden" value="@Model.RentFrom.ToShortDateString()" name="RentFrom">
                <input type="hidden" value="@Model.RentTo.ToShortDateString()" name="RentTo">
                <input type="hidden" value="@Model.ParkingName" name="ParkingName">
                <input type="hidden" value="@Model.ParkingPlaceId" name="ParkingPlaceId">
                <input type="hidden" value="@Model.ParkingNumber" name="ParkingNumber">
                <input type="hidden" value="@Model.ParkingId" name="ParkingId">
                <input type="hidden" value="@Model.Address" name="Address">
                <input type="hidden" value="@Model.Amount" name="Amount">


                <label>Period From: @Model.RentFrom.ToShortDateString()</label><br />
                <label>Period To: @Model.RentTo.ToShortDateString()</label><br />
                <label>Amount: @Model.Amount</label><br />
                <label>City: @Model.City</label><br />
                <label>Parking:@Model.ParkingName</label><br />
                <label>Parkingp Place:@Model.ParkingNumber</label><br />
                <label>Address: @Model.Address</label><br />
            </div>
            <input type="submit" class="btn btn-primary" value="Pay" style="margin-top:20px" />
        </form>
    </div>
</div>

<style>
    img {
        width: 100%;
        height: auto;
    }
</style>